<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox fx:id="hBox" alignment="CENTER" fillHeight="false" prefHeight="750.0" prefWidth="1000.0" style="-fx-background-color: lightblue;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.clientView.aaaaGUITesting.GameController">
    <children>
      <StackPane fx:id="leftStack" alignment="CENTER_LEFT" centerShape="false">
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label fx:id="graphicAction" alignment="TOP_CENTER" contentDisplay="TOP" text="--ACTION--">
                     <font>
                        <Font name="Felix Titling" size="18.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" spacing="25.0">
                     <children>
                        <Label alignment="TOP_CENTER" contentDisplay="TOP" text="Selected Worker:">
                           <font>
                              <Font name="Felix Titling" size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="graphicSelectedWorker" alignment="TOP_CENTER" contentDisplay="TOP" layoutX="10.0" layoutY="10.0" text="?-?">
                           <font>
                              <Font name="Felix Titling" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox fx:id="vBoxLeft" alignment="CENTER" fillWidth="false">
               <children>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#setActionMove" text="Move" textAlignment="CENTER">
                     <font>
                        <Font name="Felix Titling" size="18.0" />
                     </font>
                  </Button>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#setActionBuild" text="Build" textAlignment="CENTER">
                     <font>
                        <Font name="Felix Titling" size="18.0" />
                     </font>
                  </Button>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#setActionBuildDome" text="BuildDome" textAlignment="CENTER">
                      <font>
                        <Font name="Felix Titling" size="18.0" />
                     </font>
                  </Button>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#setActionSelectWorker" text="Select Worker" textAlignment="CENTER">
                     <font>
                        <Font name="Felix Titling" size="18.0" />
                     </font>
                  </Button>
                  <Button alignment="CENTER" contentDisplay="CENTER" layoutX="34.0" layoutY="115.0" mnemonicParsing="false" onAction="#testPossibleActions" text="test Possible actions" textAlignment="CENTER">
                     <font>
                        <Font name="Felix Titling" size="18.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
         <HBox.margin>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </HBox.margin>
      </StackPane>

                <GridPane fx:id="board" alignment="CENTER" minHeight="200.0" minWidth="200.0" scaleShape="false" styleClass="board" stylesheets="@background.css">
              <columnConstraints>
                  <ColumnConstraints hgrow="ALWAYS" />
                  <ColumnConstraints hgrow="ALWAYS" />
                  <ColumnConstraints hgrow="ALWAYS" />
                  <ColumnConstraints hgrow="ALWAYS" />
                  <ColumnConstraints hgrow="ALWAYS" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints vgrow="ALWAYS" />
                  <RowConstraints vgrow="ALWAYS" />
                  <RowConstraints vgrow="ALWAYS" />
                  <RowConstraints vgrow="ALWAYS" />
                  <RowConstraints vgrow="ALWAYS" />
              </rowConstraints>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
         <HBox.margin>
            <Insets />
         </HBox.margin>
          </GridPane>
      <StackPane fx:id="rightStack" centerShape="false">
         <children>
            <Label fx:id="message" textAlignment="CENTER">
               <font>
                  <Font name="Felix Titling" size="18.0" />
               </font>
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
            </Label>
            <VBox fx:id="possibleActionsBox" alignment="BOTTOM_CENTER" fillWidth="false" />
         </children>
         <HBox.margin>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </HBox.margin>
      </StackPane>
   </children>
</HBox>
